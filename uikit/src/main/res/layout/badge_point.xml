<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/badge"
        android:layout_width="@dimen/badge_point_width"
        android:layout_height="@dimen/badge_height"
        android:layout_marginTop="@dimen/mini_special_margin_five"
        android:background="@drawable/hpl_badge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/star_icon"
        android:layout_width="@dimen/mini_star_size"
        android:layout_height="@dimen/mini_star_size"
        android:layout_marginStart="@dimen/mini_margin"
        android:layout_marginTop="@dimen/mini_margin"
        android:layout_marginEnd="@dimen/mini_margin"
        android:layout_marginBottom="@dimen/mini_margin_x_small"
        android:src="@drawable/star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/star_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mini_special_margin_seven"
        android:layout_marginTop="@dimen/mini_special_margin_six"
        android:layout_marginEnd="@dimen/mini_margin"
        android:layout_marginBottom="@dimen/mini_margin_x_small"
        android:lineHeight="@dimen/mini_line_height"
        android:textColor="@color/akakce_blue_gray500"
        android:textFontWeight="700"
        android:textSize="@dimen/mini_text_font_size"
        app:layout_constraintStart_toEndOf="@id/star_icon"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>