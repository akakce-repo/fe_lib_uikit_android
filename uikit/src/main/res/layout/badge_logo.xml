<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/badge_logo_width"
        android:layout_height="@dimen/badge_height"
        android:layout_marginTop="@dimen/mini_special_margin_five"
        android:background="@drawable/mini_hpl_badge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="@dimen/mini_logo_width"
        android:layout_height="@dimen/mini_logo_height"
        android:layout_marginStart="@dimen/mini_margin"
        android:layout_marginTop="@dimen/mini_special_margin_six"
        android:layout_marginEnd="@dimen/mini_margin"
        android:layout_marginBottom="@dimen/mini_margin_x_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>